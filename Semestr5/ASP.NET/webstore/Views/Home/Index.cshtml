@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to Our Web Store!</h1>
    <p class="lead">Explore our products or start placing an order now.</p>

    <div class="mt-4">
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg mx-2">
            Browse Products
        </a>
        <a asp-controller="Orders" asp-action="Create" class="btn btn-success btn-lg mx-2">
            Create an Order
        </a>
    </div>
</div>
