@model StoreWebApp.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: cover;">
            }
            else
            {
                <img src="https://via.placeholder.com/400x400" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: cover;">
            }
        </div>

        <div class="col-md-6">
            <h1 class="display-4">@Model.Name</h1>
            <p class="text-muted">@Model.Description</p>
            <p class="h4 text-success"><strong>Price:</strong> $@Model.Price</p>
            <p class="h5"><strong>Category:</strong> <span class="badge bg-secondary">@Model.Category.Name</span></p>

                <a asp-action="Index" class="btn btn-outline-primary btn-lg mt-4 me-2">Back to All Products</a>
        </div>
    </div>
</div>
